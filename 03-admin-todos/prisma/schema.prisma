generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Definir el modelo de la base de datos (modelo seria la tabla en la db)
model Todo {
    id          String   @id @default(uuid())
    description String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
